{
    "$schema": "https://schema.tauri.app/config/2",
    "build": {
        "frontendDist": "../src"
    },
    "productName": "文颜",
    "mainBinaryName": "文颜",
    "identifier": "com.yztech.WenYan",
    "app": {
        "windows": [
            {
                "title": "文颜",
                "transparent": true,
                "decorations": false,
                "width": 1200,
                "height": 800,
                "minWidth": 840,
                "minHeight": 580,
                "dragDropEnabled": false
            }
        ],
        "macOSPrivateApi": true,
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "resources/*"
        ],
        "copyright": "© 2024 Lei Cao. All rights reserved."
    },
    "plugins": {}
}